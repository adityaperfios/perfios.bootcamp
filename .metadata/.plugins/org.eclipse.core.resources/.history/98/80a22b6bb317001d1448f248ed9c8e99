import java.util.Scanner;
public class Switch_case {
	public int add(int a,int b) {
    	int c = a + b;
    	return c;
    }
	
	public int sub(int a,int b) {
		int c = a - b;
		return c;
	}
	public int div(int a,int b) {
		int c = a / b;
		return c;
	}
